# Configuración de Producción para SIFGPT
# Copia este archivo como .env en tu servidor de producción

# Configuración de la aplicación
DEBUG=False
SECRET_KEY=your-production-secret-key-here-change-this
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuración del servidor
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Configuración de OpenAI
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
WHISPER_MODEL=whisper-1

# Configuración de seguridad
MAX_CONTENT_LENGTH=16777216  # 16MB en bytes
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Configuración de la base de datos
# DATABASE_URL=postgresql://usuario:password@localhost/sifgpt

# Configuración de directorios
INPUT_DIR=input
AUDIO_DIR=input/audios
HISTORICO_DIR=input/historico
PROMPTS_DIR=input/prompts
PLANTILLAS_DIR=input/plantillas_solucion

# Configuración de caché
CACHE_TIMEOUT=3600

# Configuración de monitoreo
HEALTH_CHECK_INTERVAL=300
LOG_RETENTION_DAYS=30
