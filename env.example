# Configuración de SIFGPT - Sistema de PQRS
# Copia este archivo como .env y configura tus valores

# Configuración de la aplicación
DEBUG=True
SECRET_KEY=sifgpt-secret-key-2024-change-in-production
LOG_LEVEL=INFO

# Configuración de OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
WHISPER_MODEL=whisper-1

# Configuración de la base de datos (si se implementa en el futuro)
# DATABASE_URL=postgresql://user:password@localhost:5432/sifgpt

# Configuración de seguridad
MAX_CONTENT_LENGTH=16777216  # 16MB en bytes

# Configuración de logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuración de archivos
INPUT_DIR=input
AUDIO_DIR=input/audios
HISTORICO_DIR=input/historico
PROMPTS_DIR=input/prompts
PLANTILLAS_DIR=input/plantillas_solucion
